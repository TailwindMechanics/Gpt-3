.root
{
    background-color: rgba(96, 96, 96, 0);
    -unity-slice-left: 0;
    -unity-slice-top: 0;
    -unity-slice-right: 0;
    -unity-slice-bottom: 0;
    opacity: 1;
    display: flex;
    margin: 5px;
    flex-grow: 1;
    align-self: stretch;
    justify-content: space-between;
    align-items: stretch;
}

.chatView
{
    justify-content: flex-start;
    border-left-color: rgb(100, 100, 100);
    border-right-color: rgb(100, 100, 100);
    border-top-color: rgb(100, 100, 100);
    border-bottom-color: rgb(100, 100, 100);
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-radius: 5px;
    flex-grow: 1;
    height: 75%;
    flex-basis: 75%;
    min-height: 75%;
    flex-shrink: 0;
    margin-top: 0;
    padding-top: 6px;
}

.chatBox
{
}

.inputView
{
    justify-content: center;
    background-color: rgba(255, 255, 255, 0);
    flex-direction: row;
    flex-grow: 0;
    flex-shrink: 0;
    align-items: center;
    align-self: flex-end;
    max-width: none;
    flex-wrap: wrap;
    flex-basis: 5%;
    border-left-width: 1px;
    border-radius: 5px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-left-color: rgb(100, 100, 100);
    border-right-color: rgb(100, 100, 100);
    border-top-color: rgb(100, 100, 100);
    border-bottom-color: rgb(100, 100, 100);
    height: auto;
    min-height: 40px;
    max-height: 40px;
    -unity-text-align: upper-left;
    width: 100%;
    transform-origin: center;
}

.inputBox
{
    justify-content: space-around;
    align-items: stretch;
    flex-grow: 1;
    flex-direction: column;
    flex-wrap: wrap;
    height: 100%;
    align-self: center;
    flex-basis: 100%;
    flex-shrink: 0;
    width: auto;
    min-height: auto;
    max-height: none;
    -unity-text-align: upper-left;
    -unity-font-style: normal;
    font-size: 15px;
    top: auto;
    transform-origin: center;
    padding-left: 0;
}